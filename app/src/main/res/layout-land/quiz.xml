<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                tools:context="com.example.addgrievance.MainActivity"
                android:background="#f2f2f2">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#e5e4e4"
      android:padding="10dp"
      android:id="@+id/frameLayout4">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 00:00:00"
        android:textColor="#81888d"
        android:id="@+id/quiz_txtTimer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|center_vertical"
        android:textSize="12sp"
        android:drawableLeft="@drawable/time" />

  </FrameLayout>

  <ScrollView
      android:id="@+id/scrollView1"
      android:layout_width="316dp"
      android:layout_height="wrap_content"
      android:scrollbars="vertical"
      android:layout_gravity="top"
      android:layout_below="@+id/frameLayout4"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:minHeight="50dp">

    <RelativeLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LinearLayout01"
        android:scrollbars="vertical"
        android:gravity="fill|top"
        android:paddingBottom="60dp">

      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:gravity="top"
          android:minHeight="60dp"
          android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:gravity="left|top"
            android:layout_toLeftOf="@+id/frameNavigator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

          <TextView
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text=""
              android:textColor="@android:color/background_dark"
              android:id="@+id/quiz_txtQuestion"
              android:textSize="22sp"
              android:layout_marginBottom="5dp"
              android:layout_weight="1" />

          <RadioGroup
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:id="@+id/quiz_rgOpinion"
              android:gravity="left"
              android:layout_weight="1">

          </RadioGroup>

          <Button
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:text="Submit"
              android:id="@+id/quiz_btnSubmit"
              android:textAllCaps="true"
              android:background="@drawable/custom_navigator"
              android:textColor="#ffffff"
              android:textSize="20sp"
              android:minHeight="36dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:layout_below="@+id/quiz_txtOption4"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_marginTop="5dp"
              android:layout_weight="1" />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:text="Skip"
              android:id="@+id/quiz_btnSkip"
              android:textAllCaps="true"
              android:background="@drawable/custom_navigator"
              android:textColor="#ffffff"
              android:textSize="20sp"
              android:minHeight="36dp"
              android:layout_below="@+id/quiz_txtOption4"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:layout_marginTop="-37dp"
              android:layout_marginLeft="110dp"
              android:layout_weight="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/custom_navigator"
            android:foregroundGravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:minWidth="200dp"
            android:id="@+id/frameNavigator">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text=" Navigator"
              android:id="@+id/quiz_txtNavLabel"
              android:layout_weight="0.44"
              android:layout_alignBottom="@+id/quiz_txtMCQ"
              android:layout_toRightOf="@+id/quiz_txtMCQ"
              android:layout_toEndOf="@+id/quiz_txtMCQ"
              android:layout_gravity="left|top"
              android:textColor="#ffffff"
              android:textSize="16sp"
              android:drawableLeft="@drawable/navigator_small" />

          <TableLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tableNavigatorLayout"
              android:layout_toEndOf="@+id/quiz_txtNavLabel"
              android:layout_toRightOf="@+id/quiz_txtNavLabel"

              android:layout_alignLeft="@+id/linearLayout2"
              android:layout_alignStart="@+id/linearLayout2"
              android:layout_marginTop="35dp">

          </TableLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" Taken"
              android:id="@+id/quiz_txtTaken"
              android:layout_marginTop="160dp"
              android:textSize="12sp"
              android:textColor="#ffffff"
              android:minWidth="90dp"
              android:layout_gravity="left"
              android:drawableLeft="@drawable/taken"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" Skipped"
              android:id="@+id/quiz_txtSkipped"
              android:layout_marginTop="160dp"
              android:textSize="12sp"
              android:textColor="#ffffff"
              android:minWidth="90dp"
              android:layout_gravity="right"
              android:drawableLeft="@drawable/skiped"/>

        </FrameLayout>

      </RelativeLayout>

    </RelativeLayout>
  </ScrollView>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#e5e4e4"
      android:padding="10dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question:"
        android:id="@+id/quiz_txtQLabel"
        android:layout_gravity="left"
        android:textSize="12sp"
        android:textColor="#81888d"
        android:layout_above="@+id/questionProgress"
        android:layout_alignLeft="@+id/questionProgress"
        android:layout_alignStart="@+id/questionProgress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/quiz_txtCurrentQuestion"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textColor="#81888d"
        android:layout_toEndOf="@+id/quiz_txtQLabel"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/quiz_txtQLabel"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/questionProgress"
        android:layout_gravity="left|bottom"
        android:layout_below="@+id/quiz_txtCurrentQuestion"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/progress_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
  </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:state_pressed="true">         
	    <shape android:shape="rectangle">
			<stroke android:width="1dip" android:color="#99ae32" />
			<gradient android:angle="-90" android:endColor="#99ae32" android:startColor="#a8bd44" />    
	</shape>     
	</item>
	<item android:state_focused="true">         
		<shape android:shape="rectangle">
			<stroke android:width="1dip" android:color="#99ae32" />
			<solid android:color="#99ae32" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<stroke android:width="1dip" android:color="#99ae32" />
			<gradient android:angle="-90" android:endColor="#a8bd44" android:startColor="#99ae32" />
		</shape>
	</item>

</selector>